generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  name          String?
  email         String         @unique
  password      String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  googleId      String?        @unique
  shopId        String?        @unique
  whatsapp      String?
  id            String         @id @default(cuid())
  role          Role           @default(USER)
  address       String?
  dateOfBirth   DateTime?
  gender        String?
  image         String?
  fcmToken      String?
  addresses     Address[]
  notifications Notification[]
  orders        Order[]
  reviews       Review[]
  shop          Shop?          @relation(fields: [shopId], references: [id])
}

model Address {
  id           String  @id @default(cuid())
  userId       String
  label        String
  receiverName String
  phone        String
  street       String
  city         String
  province     String
  postalCode   String
  latitude     Float?
  longitude    Float?
  isMain       Boolean @default(false)
  user         User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Shop {
  slug                String     @unique
  description         String?
  logo                String?
  isOpen              Boolean    @default(true)
  balance             Decimal    @default(0) @db.Decimal(20, 2)
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
  address             String?
  commissionRate      Float      @default(0.05)
  name                String
  id                  String     @id @default(cuid())
  latitude            Float?
  longitude           Float?
  maxDeliveryDistance Float      @default(5)
  paymentMethods      String[]   @default([])
  status              ShopStatus @default(PENDING)
  bankAccountName     String?
  bankAccountNumber   String?
  bankName            String?
  qrisImage           String?
  orders              Order[]
  products            Product[]
  reviews             Review[]
  stockLogs           StockLog[]
  owner               User?
}

model Category {
  id       String     @id @default(cuid())
  name     String     @unique
  slug     String     @unique
  icon     String?
  parentId String?
  parent   Category?  @relation("SubCategories", fields: [parentId], references: [id])
  children Category[] @relation("SubCategories")
  products Product[]
}

model Tag {
  id       String       @id @default(cuid())
  name     String       @unique
  slug     String       @unique
  type     TagType      @default(CHARACTERISTIC)
  products ProductTag[]
}

model ProductTag {
  productId String
  tagId     String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([productId, tagId])
}

model Product {
  name        String
  description String?
  price       Decimal          @db.Decimal(20, 2)
  stock       Int              @default(0)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  id          String           @id @default(cuid())
  shopId      String
  categoryId  String?
  condition   String           @default("NEW")
  expiresAt   DateTime?
  expiryInfo  String?
  isActive    Boolean          @default(true)
  isPreOrder  Boolean          @default(false)
  slug        String?
  status      ProductStatus    @default(ACTIVE)
  trackStock  Boolean          @default(true)
  unitId      String?
  weight      Int              @default(0)
  orderItems  OrderItem[]
  category    Category?        @relation(fields: [categoryId], references: [id])
  shop        Shop             @relation(fields: [shopId], references: [id])
  unit        Unit?            @relation(fields: [unitId], references: [id])
  images      ProductImage[]
  tags        ProductTag[]
  variants    ProductVariant[]
  reviews     Review[]
  stockLogs   StockLog[]

  @@unique([shopId, slug])
}

model Review {
  id        String   @id @default(cuid())
  rating    Int      @default(5)
  comment   String?
  images    String[] @default([])
  userId    String
  productId String?
  shopId    String?
  orderId   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  product   Product? @relation(fields: [productId], references: [id])
  shop      Shop?    @relation(fields: [shopId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
  order     Order?   @relation(fields: [orderId], references: [id])

  @@index([productId])
  @@index([shopId])
  @@index([orderId])
  @@index([userId])
}

model StockLog {
  id        String   @id @default(cuid())
  quantity  Int
  type      String
  productId String
  shopId    String
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  shop      Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)
}

model ProductImage {
  id        String  @id @default(cuid())
  productId String
  url       String
  isPrimary Boolean @default(false)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model ProductVariant {
  id         String  @id @default(cuid())
  productId  String
  name       String
  value      String
  extraPrice Decimal @default(0) @db.Decimal(20, 2)
  product    Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Unit {
  id                String    @id @default(cuid())
  name              String    @unique
  conversionBase    String?
  conversionRate    Float?
  decimalPlaces     Int       @default(0)
  group             String?
  isFractionAllowed Boolean   @default(false)
  subGroup          String?
  symbol            String?
  products          Product[]
}

model Order {
  id              String      @id @default(cuid())
  totalAmount     Decimal     @db.Decimal(20, 2)
  shopId          String
  commission      Decimal     @db.Decimal(20, 2)
  netAmount       Decimal     @db.Decimal(20, 2)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  notes           String?
  paymentMethod   String
  paymentStatus   String      @default("pending")
  shippingAddress Json?
  userId          String
  deliveryStatus  String      @default("pending")
  paymentProof    String?
  status          String      @default("pending")
  shippingMethod  String?     @default("seller")
  shop            Shop        @relation(fields: [shopId], references: [id])
  user            User        @relation(fields: [userId], references: [id])
  items           OrderItem[]
  reviews         Review[]

  @@index([userId])
  @@index([shopId])
  @@index([paymentStatus])
  @@index([createdAt])
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Decimal @db.Decimal(20, 2)
  subtotal  Decimal @db.Decimal(20, 2)
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])

  @@unique([orderId, productId])
  @@index([productId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  body      String
  type      String
  isRead    Boolean  @default(false)
  link      String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
}

model Carousel {
  id          String   @id @default(cuid())
  title       String?
  subtitle    String?
  description String?
  imageUrl    String
  link        String?
  cta         String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum ShopStatus {
  PENDING
  ACTIVE
  SUSPENDED
}

enum Role {
  USER
  ADMIN
  SELLER
}

enum ProductStatus {
  ACTIVE
  INACTIVE
  ARCHIVED
}

enum TagType {
  CHARACTERISTIC
  EVENT
  DIET
}

enum Condition {
  NEW
  USED
}
